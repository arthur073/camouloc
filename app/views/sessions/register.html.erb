  <body class="hold-transition register-page">
    <div class="register-box">
      <div class="register-logo">
        <a href="../../index2.html"><b>Camouloc</b></a>
      </div>
	  

      <div class="register-box-body">
        <p class="login-box-msg">Hey there! Welcome onboard, we just need some information before creating your <strong> Camouloc </strong> dashboard. </p>

        <% flash.each do |type, content| %>
            <% if content.respond_to?('each') 
                content.each do |item| %>
                    <%= render 'layouts/alert', 
                        type: type,
                        content: item %>
                <% end %>
            <% else %>
                <%= render 'layouts/alert', 
                        type: type,
                        content: content %>
            <% end %>

        <% end %>

		<%= form_for @coloc, :html => { "data-toggle" => "validator", :id => "mainform" } do |f| %>
		
		
          <div class="form-group has-feedback">
			<%= f.text_field :nom, :class => "form-control", :placeholder => "Give your flatshare a name", :required => true, "data-minlength" => "3", 
							"data-remote" => "/verifycoloc", :name => "nom", "data-remote-error" => "This flatshare name already exists" %>
            <span class="glyphicon glyphicon-heart form-control-feedback"></span>
			<div class="help-block with-errors"></div>
          </div>		
		
          <%= fields_for @user do |u| %>

          <div class="form-group has-feedback">
			<%= u.text_field :nom, :class => "form-control", :placeholder => "Enter your name", :required => true, "data-minlength" => "6" %>
            <span class="glyphicon glyphicon-user form-control-feedback"></span>
			<div class="help-block with-errors"></div>
          </div>
          <div class="form-group has-feedback">
			<%= u.email_field :email, :class => "form-control", :placeholder => "Enter your email", :required => true, "data-minlength" => "6",
							"data-remote" => "/verifyuser", :name => "email", "data-remote-error" => "A user with this email already exists" %>
            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
			<div class="help-block with-errors"></div>
          </div>
          <div class="form-group has-feedback">
			<%= u.password_field :password, :class => "form-control", :placeholder => "Enter a password", :required => true, "data-minlength" => "8", :id => "inputPassword" %>
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
			<span class="help-block">Minimum of 8 characters</span>
			<div class="help-block with-errors"></div>
          </div>
          <div class="form-group has-feedback">
			<%= u.password_field :password_confirmation, :class => "form-control", :placeholder => "Retype your password", :required => true, "data-match" => "#inputPassword" %>
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
			<div class="help-block with-errors"></div>
          </div>	
		  <% end %>

          <%= f.submit "Register", :class => "btn btn-primary btn-block btn-flat"%>
		<% end %>
        <div class="social-auth-links text-center">
          <p>- OR -</p>
          <a href="/auth/facebook?inscr=0" class="btn btn-block btn-social btn-facebook btn-flat"><i class="fa fa-facebook"></i> Sign up using Facebook</a>
          <a href="#" class="btn btn-block btn-social btn-google btn-flat"><i class="fa fa-google-plus"></i> Sign up using Google+</a>
        </div>

        <%= link_to "I am already a member!", login_path, :class => "text-center" %>
      </div><!-- /.form-box -->
    </div><!-- /.register-box -->
	
	    <%= javascript_include_tag "jquery.min", "bootstrap.min", "validator.min" %>
    <script>
	  	$('#mainform').validator();
    </script>
  </body>
