<h1> <%= @titre %>  </h1>

<table>
        <tr>
                <td class="sidebar2">
                        <strong> Il y a actuellement <%= Coloc.count %> colocations inscrites sur Camouloc. <%= link_to "Voir les utilisateurs !", users_path %></strong>
        </td>
</tr>
</table>


<%= will_paginate %>
<ul class="colocs">
        <% @colocs.each do |coloc| %>
                <li>  <%= link_to coloc.nom, coloc %> <i> (
                <% if coloc.users.count < 2 %>
                        <%= coloc.users.count %> coloc) 
                <% else %>
                        <%= coloc.users.count %> colocs)
                <% end %> 
                </i></li>
                <% if signed_in? and current_user.admin? %>
                        <li onclick="return confirm('Etes-vous sÃ»r de vouloir supprimer la colocation ?')"> <%= button_to "Suppr", coloc, :method => :delete  %> </li>
                <% end %>
        <% end %>
</ul>

<%= will_paginate %>
