<table class="profile" summary="Information profil">
        <tr>
                <td class="main">
                        <h1>
                                <%= @coloc.nom %>
                        </h1>
                </td>
                <td class="sidebar round">
                        <strong>Nom</strong> <%= @coloc.nom %><br>
                        <strong>Colocataires</strong> <%= @coloc.users.count %>/4<br>
                        <strong>Chiffre d'Affaires</strong> <%= "%0.2f" % @coloc.ca %> € <br>
                        <strong>Visible ?</strong> 
                                <% if @coloc.palm == 1 %> 
                                        oui 
                                <% else %>
                                        non
                                <% end %>
                                <br>
                        <strong>Coloc créée le </strong>  <%= @coloc.created_at.strftime("%d %b. %Y") %> <br>
                </td>
        </tr>
</table>
<% if @coloc.users.size == 0 %>
        Pas de colocataire inscrit.
<% else %>
        <table class="tabbord">
                <tr> <strong> Liste des membres de la colocation : </strong> <br>
                        <% @liste.each do |users| %>
                                <tr>  <td valign="middle"> <%= gravatar_for users, :size => 60 %> 
                                                <font size ="4"> <%= liste_users(users) %> </font></tr> </td>
                        <% end %>
                </tr>
        </table>
<% end %>
<br>
<% if @coloc.users.size < 4 %>
        <% unless (@coloc.users.size == 2 and (@coloc.users[0].depenses.size != 0 or @coloc.users[1].depenses.size != 0)) or  
        (@coloc.users.size == 3 and (@coloc.users[0].trois_depenses.size != 0 or @coloc.users[1].trois_depenses.size != 0 or @coloc.users[2].trois_depenses.size != 0)) or
        (@coloc.users.size == 4 and (@coloc.users[0].quatre_depenses.size != 0 or @coloc.users[1].quatre_depenses.size != 0 or @coloc.users[2].quatre_depenses.size != 0 or @coloc.users[3].quatre_depenses.size != 0)) %>
                <%= nouveau_coloc? %>  <br>
        <% end %>
<% else %>
        Nombre maximum de colocataires atteint.<br>

<% end %>




<%= edit_coloc? %>
