<table class="profile" summary="information profil">
        <tr>
                <td class="main">
                        <h1>
                                <%= @coloc.nom %>
                        </h1>
                </td>
                <td class="sidebar">
                        <strong>nom</strong> <%= @coloc.nom %><br>
                        <strong>colocataires</strong> <%= @coloc.users.count %><br>
                        <strong>chiffre d'affaires</strong> <%= "%0.2f" % @coloc.ca %> € <br>
                        <strong>visible ?</strong> 
                        <% if @coloc.palm == 1 %> 
                                oui <br> 
                                <strong>classement</strong> <%= @colocs.reverse.index(@coloc) + 1 %> <br>
                        <% else %>
                                non <br>
                        <% end %>
                        <strong>coloc créée le </strong>  <%= @coloc.created_at.strftime("%d %b. %y") %> <br>
                </td>
        </tr>
</table>

<% if @coloc.users.size == 0 %>
        Pas de colocataire inscrit.
<% else %> 
        <strong> Liste des membres de la colocation </strong> 
        <a id="show_id" onclick="document.getElementById('spoiler_id').style.display=''; document.getElementById('show_id').style.display='none';" class="link" style="display: none">[Voir]<br></a>
        <span id="spoiler_id" style="display: ">
                <a onclick="document.getElementById('spoiler_id').style.display='none'; document.getElementById('show_id').style.display='';" class="link">[Cacher]</a><br>

                <table class="tabbord">
                        <tr>
                                <td> <strong> Avatar </strong> </td>
                                <td> <strong> Nom </strong></td>
                                <td> <strong> Email </strong></td>
                        </tr>
                        <% @liste.each do |users| %>
                                <tr>  <td> 
					<% if users.has_image %>
						<%= image_tag (users.image) , :size => "60x60", :style => "box-shadow: 0px 2px 5px #1c1a19;" %>
					<% else %>
						<%= gravatar_for users, :size => 60 %> 
					<% end %> 
					</td>
                                        <td>     <font size ="4" align="top"> <%= liste_users(users) %> </font></td> <td> <%= mail_to users.email %> </td></tr>
                        <% end %>
                </tr>
        </table>
<% end %>
</span>
<br>
<table class="microposts">
	<strong> Nos messages publics :</strong>
	<% if @messagespubl.size == 0 %>
		<br>Aucun message public à afficher.
	<% else %>
        <% @messagespubl.each do |message| %>
                <tr>
                        <td class="micropost">
                                <span class="content"><strong> <%= message.content %></strong></span>
                                <span class="timestamp">
                                        Posté il y a <%= time_ago_in_words(message.created_at) %> par <%= link_to User.find(message.source_id).nom,  User.find(message.source_id)%> membre de <%= link_to Coloc.find(User.find(message.source_id).coloc_id).nom,  Coloc.find(User.find(message.source_id).coloc_id)%>. 
        <% if signed_in? and (current_user.admin? or current_user.id == message.source_id or current_user.coloc_id == @coloc.id) %>
                                <span onclick="return confirm('Etes-vous sûr de vouloir supprimer le message ?')"> <%= button_to "Suppr", message, :method => :delete  %> </span>
                        <% end  %>

                                </span>
                        </td> 
                                        </tr>
        <% end %>
        <% end %>


</table>
       
<%= will_paginate @messagespubl %>

<% if signed_in? and current_user.coloc_id == @coloc.id %>
<table class="microposts">
	<strong> Nos messages privés : </strong> <i> (seuls les membres de la colocation peuvent les voir) </i>
	<% if @messagespriv.size == 0 %>
		<br>Aucun message privé à afficher.
	<% else %>
        <% @messagespriv.each do |message| %>
                <tr>
                        <td class="micropost">
                                <span class="content"><strong> <%= message.content %></strong></span>
                                <span class="timestamp">
                                        Posté il y a <%= time_ago_in_words(message.created_at) %> par <%= link_to User.find(message.source_id).nom,  User.find(message.source_id)%> membre de <%= link_to Coloc.find(User.find(message.source_id).coloc_id).nom,  Coloc.find(User.find(message.source_id).coloc_id)%>. 
        <% if signed_in? and (current_user.admin? or current_user.id == message.source_id or current_user.coloc_id == @coloc.id) %>
                                <span onclick="return confirm('Etes-vous sûr de vouloir supprimer le message ?')"> <%= button_to "Suppr", message, :method => :delete  %> </span>
                        <% end  %>

                                </span>
                        </td> 
                                        </tr>
        <% end %>
        <% end %>


</table>
<% end %>


<script>
	function show() {
		document.getElementById("messages").style.display="";
		document.getElementById("postmess").style.display="none";
	}
</script>

<div id="postmess" style="display:''" >
	<a class="signup_button4" onclick="show()"> Poster un Message </a>
</div>


<div id="messages" style="display:none" >
	<%= link_to "Message privé", new_message_path(:coloc_id => @coloc.id, :priv =>1), :class => "signup_button4" %> 
	<%= link_to "Message public", new_message_path(:coloc_id => @coloc.id, :priv =>0), :class => "signup_button4" %> 
</div>



        <% unless (@coloc.users.size == 2 and (@coloc.users[0].depenses.size != 0 or @coloc.users[1].depenses.size != 0)) or  
        (@coloc.users.size == 3 and (@coloc.users[0].trois_depenses.size != 0 or @coloc.users[1].trois_depenses.size != 0 or @coloc.users[2].trois_depenses.size != 0)) or
        (@coloc.users.size == 4 and (@coloc.users[0].quatre_depenses.size != 0 or @coloc.users[1].quatre_depenses.size != 0 or @coloc.users[2].quatre_depenses.size != 0 or @coloc.users[3].quatre_depenses.size != 0)) or
        (@coloc.users.size > 4 and @pleine == true)
     %>
         <%= link_to "Inscrire mes colocs", new_user_path(:coloc_id => @coloc.id) , :class => "signup_button4" %>
<% end %>


<%= edit_coloc? %>
