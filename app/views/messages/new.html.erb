<h1> <%= @titre %> </h1>

<%= form_for(@message) do |f| %>

	<%= render 'shared/error_messages', :object => f.object %>
<div class="descriptionNormal">

         <div class="field" style="display:none">
                <%= f.label "Colocation" %><br>
                <%= f.select :coloc_id, options_for_select([[@coloc.nom, @coloc.id]]) %>
        </div>

	 <div class="field" style="display:none">
                <%= f.label "Privé ?" %><br>
                <%= f.check_box :private %>
        </div>


        <div class="field">
		<% if @message.private == 0 %>                 
			<span> Vous êtes sur le point d'écrire un nouveau message pour </span>
			la colocation <span class="cam1"><%= @coloc.nom %>.</span>
		<% else %>
			<span> Nouveau message <strong> privé </strong> pour </span>
			la colocation <span class="cam1"><%= @coloc.nom %>.</span>
			<br> <i> Attention, seuls les membres de <span class="cam1"><%= @coloc.nom %>.</span> pourront voir le message. </i>
		<% end %>
        </div>

	Exprimez-vous ! <br/>

        <div class="field">
                <%= f.text_area(:content, :class => 'textarea') %>
        </div>

        <div class="actions">
		<%= f.submit "Enregistrer" , :id => "btnColocCreate"%>
        </div>

<% end %>
</div>
