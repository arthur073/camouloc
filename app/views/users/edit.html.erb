<h1> <%= @titre %> </h1>

<script>
	$("f").validate({
		errorClass: "my-error-class",
		validClass: "my-valid-class",
		rules: {
			password: {
				required: true,
				minlength: 6
			}
		}
	});
</script>

<% if @user.has_image %>
		<%= image_tag (@user.image) , :size => "100x100", :class => "imgframe" %>
	<% else %>
		<%= gravatar_for @user %>
	<% end %> 

<%= form_for(@user) do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>
	<div class="descriptionNormal">
	<div class="field">
		Entrez un nouveau nom. <br />
		<%= f.text_field :nom, :class => "colocCreate" %>
	</div>
	<br/>
	<div class="field">
		Envie de changer votre adresse email ? <br />
		<%= f.email_field :email , :class => "colocCreate"%>
	</div>
	<br/>

	<div class="field" name="password">
		Vous pouvez Ã©galement changer votre mot de passe.<br />
		<%= f.password_field :password, :class => "colocCreate" %> <i> (Obligatoire)  </i> 
	</div>
	<div class="field">
		Veuillez confirmer votre mot de passe.<br />
		<%= f.password_field :password_confirmation, :class => "colocCreate" %><i> (Obligatoire)  </i>
	</div>
	<br/>

	<div class="field">
		Acceptez-vous de recevoir des notifications de <span class="cam1"> Camouloc. </span> par email ?<br/>
		<%= f.check_box :mail %>
		<%= f.label "Recevoir les notifications ?" %><br />
	</div>
	<br/>

	<div class="actions">
		<%= f.submit "Actualiser", :id =>"btnColocCreate"%>
	</div>

<% end %>
</div>
