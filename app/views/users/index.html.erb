<h1> <%= @titre %> </h1>

<%= will_paginate %>

<ul class="users">
	<% @users.each do |user| %>
		<li>
		<%= gravatar_for user, :size => 30 %>
		<%= link_to user.nom, user %>
		<% if signed_in? and current_user.admin? %>
			<%= button_to "supprimer", user, :method => :delete, :confirm => "Etes-vous certain&nbsp;?",:title => "Supprimer #{user.nom}" %>
		<% end %> 
		</li>
	<% end %>
</ul>

<%= will_paginate %>
