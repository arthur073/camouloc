<ul> <li class="rounded"> Liste des dépenses </li>
   <% if @liste1 != nil %>
   <% @liste1.reverse.each do |depenses| %>
      <li class="selectable"> 	
      Le <span class="enValeur"> 
      <%= depenses.created_at.strftime("%d %b. %Y") %> </span> <br>
      De : 
      <span class="enValeur"> 
      <%= User.find(depenses.user_id).nom %> <br>
      </span>
      Pour <%= @colocataires[0].nom %> : 
      <span class="enValeur"> 
      <%= "oui" if depenses.destinataire_part == 1 %> 
      <%= "non" if depenses.destinataire_part == 0 %> <br> 
      </span>
      Pour <%= @colocataires[1].nom %> : 
      <span class="enValeur"> 
      <%= "oui" if depenses.destinataire_part2 == 1 %> 
      <%= "non" if depenses.destinataire_part2 == 0 %> <br> 
      </span>
      <% if @colocataires.size > 2 %>
      Pour <%= @colocataires[2].nom %> : 
      <span class="enValeur"> 
      <%= "oui" if depenses.destinataire_part3 == 1 %> 
      <%= "non" if depenses.destinataire_part3 == 0 %> <br> 
      </span>
      <% if @colocataires.size > 3 %>
      Pour <%= @colocataires[3].nom %> : 
      <span class="enValeur"> 
      <%= "oui" if depenses.destinataire_part4 == 1 %> 
      <%= "non" if depenses.destinataire_part4 == 0 %> <br> 
      </span>
      <% end%>
      <% end%>
      Combien :	
      <span class="enValeur"> 
      <%= depenses.montant %> € 
      </span> <br>
      Raison : 
      <span class="enValeur"> 
      <%= depenses.raison %> 
      </span> 
      </li>
<% end %>
<% end %>
<% if @expenses != nil %>
<% @expenses.reverse.each do |e| %>
<li class="selectable"> 	
      Le <span class="enValeur"> 
      <%= e.created_at.strftime("%d %b. %Y") %> </span> <br>
      De : 
      <span class="enValeur"> 
      <%= User.find(e.user_id).nom %> <br>
      </span>
      <% e.parties.each do |p| %> 
         Pour <%= User.find(p.first.to_i).nom %> :
      <span class="enValeur"> 
      <%= "oui" if p.last.to_i == 1 %> 
      <%= "non" if p.last.to_i == 0 %> <br>
      </span>
   <% end %>
       Combien :	
      <span class="enValeur"> 
      <%= e.montant %> € 
      </span> <br>
      Raison : 
      <span class="enValeur"> 
      <%= e.raison %> 
      </span> 
      </li>
<% end %>
<% end %>
</ul>
