<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= h(@titre || "Untitled") %></title>
    <%= stylesheet_link_tag "/jqtouch/jqtouch.min.css", "/jqtouch/themes/jqt/theme.min.css", "mobile.css"%>
    <%= javascript_include_tag "/jqtouch/jquery.1.3.2.min.js", "/jqtouch/jqtouch.min.js", "mobile", "highcharts" %>
  </head>
  <body>
    <div class="current">
      <div class="toolbar">
        <%= link_to "Retour", "javascript:history.back()", :class => "back" unless current_page? root_path %>
        <h1><%=h @titre %></h1>
        <%= yield(:toolbar) %>
        <%= link_to "Accueil", root_path, :class => "button" unless current_page? root_path %>
        <% if signed_in? %>
           <%= link_to "DÃ©connexion", signout_path, :class => "button" if current_page? root_path %>
        <% else %>
           <%= link_to "Connection", login_path, :class => "button" if current_page? root_path %>
        <%end %>
      </div>
      
      <% unless flash.empty? %>
        <div class="info">
        <%- flash.each do |name, msg| -%>
          <%= content_tag :div, msg, :id => "flash_#{name}" %>
        <%- end -%>
        </div>
      <% end %>
      <%= yield %>
</div>
</body>
</html>
