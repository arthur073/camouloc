                 <div class="container">
                         <%= render 'layouts/header' %>
                         <section class="round">
                         <% flash.each do |key, value| %>
                                 <div class="flash <%= key %>"><%= value %></div>
                         <% end %>
                         <aside>
                         <% if signed_in? %>
                                 <h1 class="onglets">Menu</h1>
                                 <% if signed_in? and Coloc.find(current_user.coloc_id).users.size > 1 %>
                                         <%= link_to "Mon Tableau de bord", tableau_bord_path(Coloc.find(current_user.coloc_id).id) , :class => "signup_button5"%> </strong>
                                 <% else %>
                                         <%= link_to "Inscrire mes colocs", new_user_path(:coloc_id => Coloc.find(current_user.coloc_id).id) , :class => "signup_button4" %>
                                 <% end %>
                                 <%= link_to "Mon Profil", current_user, :class => "signup_button5" %>
                                 <%= link_to "Ma Colocation", Coloc.find(current_user.coloc_id), :class => "signup_button5"%>
                         <% if Coloc.find(current_user.coloc_id).users.size == 2 %>
                                 <%= link_to "Nouvelle dépense", new_depense_path(@depense) , :class => "signup_button4"%> </br>
                         <% elsif Coloc.find(current_user.coloc_id).users.size == 3 %>
                                 <%= link_to "Nouvelle dépense", new_trois_depense_path(@depense) , :class => "signup_button4"%> </br>
                         <% elsif Coloc.find(current_user.coloc_id).users.size == 4 %>
                                 <%= link_to "Nouvelle dépense", new_quatre_depense_path(@depense) , :class => "signup_button4"%> </br>
                         <% end %>
                 <% end %> 
		 <% if signed_in? and current_user.authentifications.empty? and current_user.admin? %>
			<img src="http://camouloc.herokuapp.com/new-ribbon.png" width="50" height="50" alt="new-facebook" class="new_facebook">
			<div class="signup_button6">
				<%= link_to "Lier mon Facebook", @faceb_url , :style=>"color:white; padding-right:0.5em;"%>
			</div>
		<% end %>

	                         </br> </br>

                 <h1 class="onglets">Top Colocs</h1>
                 <% @liste_coloc = Coloc.where(:palm => 1).order(:ca).reverse %>
                 <% @liste_coloc.first(3).each do |colocs, i|%>
                         <% break if i == 3 %>
                         <% if colocs.users.size > 1 %>
                                 <div align="left"> <strong><%= @liste_coloc.index(colocs) + 1 %> - <%= link_to colocs.nom, colocs, :class=>"palma" %></strong>        
                                         (<%="%0.2f" % colocs.ca %> €) </div>
                         <% end %>
                 <% end %> 
                 <%= link_to "Et les autres...", colocs_path, :class=>"signup_button5" %>
                 <% unless signed_in? or request.fullpath != root_path %>
                         <br>
                         <%= link_to "Inscription", signup_path, :class=>"signup_button4"%> <br>
                         <br>
                 <% else %>
                         <br> <br> <br>
                 <% end %>
                 <h1 class="onglets"> Les Chiffres </h1>
                 Somme gérée : <strong><%= "%0.0f" % Coloc.sum(:ca) %> €. </strong> <br>
                 <strong> <%= User.count %> </strong> utilisateurs, <strong> <%= Coloc.count %> </strong> colocations. <br>
                 <strong> <%= Depense.count + TroisDepense.count + QuatreDepense.count %> </strong> dépenses. <br>
                 <br>
                <br> <br>
                 <h1 class="onglets"> Réseaux </h1>
      <a href="https://twitter.com/Camouloc" class="twitter-follow-button" data-show-count="false">Follow @Camouloc</a>
<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>

                 <% if signed_in? and current_user.admin? %>
                         <h1 class="onglets"> Admin </h1>
                         <%= mail_to User.where(:mail => 1).map(&:email), "Mail Général", :subject => "[CAMOULOC] ??" %> <br>
                         <%= Message.count %> messages. <br>
                         <%= Depense.where(:auto => 1).count + TroisDepense.where(:auto =>1).count + QuatreDepense.where(:auto =>1).count %> dep automatiques. <br>
                         <%= TroisDepense.where("created_at > :date OR updated_at > :date", date: "2012-11-06").count + QuatreDepense.where("created_at > :date OR updated_at > :date", date: "2012-11-06").count + Depense.where("created_at > :date OR updated_at > :date", date: "2012-11-06").count %> dep payées. <br>
                         <%= Coloc.count - Coloc.where(:ca => 0).count %> colocs fonctionnelles.
                 <% end %>

                 </aside>
                 <article>
                 <%= yield %>
                 </article>


                 </section>
                 <%= render 'layouts/footer' %>
