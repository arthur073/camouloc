<!DOCTYPE html>
<html>
        <head>
                <title> MyColoc </title>
                <%= csrf_meta_tag %>
                <%= render 'layouts/stylesheets' %>
                <%= javascript_include_tag "jquery-1.7.1.min.js", "highcharts", "exporting.js" %>
                <%= favicon_link_tag "/favicon.ico" %>
                <script type="text/javascript">

                        var _gaq = _gaq || [];
                        _gaq.push(['_setAccount', 'UA-32790951-1']);
                        _gaq.push(['_trackPageview']);

                        (function() {
                         var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
                         ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
                         var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
                         })();

                 </script>
         </head>
         <body>
                 <div class="container">
                         <%= render 'layouts/header' %>
                         <section class="round">
                         <% flash.each do |key, value| %>
                                 <div class="flash <%= key %>"><%= value %></div>
                         <% end %>
                         <aside>
                         <% if signed_in? %>
                                 <h1>Liens</h1>
                                 <%= link_to "Mon Profil", current_user %></br>
                                 <%= link_to "Ma Colocation", Coloc.find(current_user.coloc_id) %></br>
                                 <%= link_to "Mon Tableau de bord", tableau_bord_path(Coloc.find(current_user.coloc_id).id) %> </strong> </br>
                         <% if Coloc.find(current_user.coloc_id).users.size == 2 %>
                                 <%= link_to "Nouvelle dépense", new_depense_path(@depense) %> </br>
                         <% elsif Coloc.find(current_user.coloc_id).users.size == 3 %>
                                 <%= link_to "Nouvelle dépense", new_trois_depense_path(@depense) %> </br>
                         <% elsif Coloc.find(current_user.coloc_id).users.size == 4 %>
                                 <%= link_to "Nouvelle dépense", new_quatre_depense_path(@depense) %> </br>
                         <% end %>
                         </br> </br>
                 <% end %> 
                 <h1> <%= link_to "Top Colocs", colocs_path %> </h1>
                 <% @liste_coloc = Coloc.order(:ca).limit(3).reverse %>
                 <% @liste_coloc.each do |colocs|%>
                         <% if colocs.users.size > 1 %>
                                 <div align="left"> <%= link_to colocs.nom, colocs %>            
                                         (<%="%0.2f" % colocs.ca %> €) </div>
                         <% end %>
                 <% end %> 
                 </aside>
                 <article>
                 <%= yield %>
                 </article>
                 </section>
                 <%= render 'layouts/footer' %>
         </div>
 </body>
</html>
